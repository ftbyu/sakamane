<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Editing game</h1>
      <% if @game.errors.any? %>
        <%= @game.errors.count %>件のerrorが発生しました
        <% @game.errors.full_messages.each do |message| %>
          <%= message %>
        <% end %>
      <% end %>
      <%= form_for(@game,url: admin_game_path(@game),) do |f| %>
        <div class="field row">
          <h4>敵スコア</h4>
          <%= f.number_field :enemy_score, class: "col-xs-12 game_email"%>
        </div>
        <div class="actions row">
          <%= f.submit "Update" ,class: "btn btn-primary col-xs-12" %>
          <br>
        </div>
      <% end %>
      　<%= link_to 'Show', admin_game_path(@game) %>
      　<%= link_to 'Back', root_path  %>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>