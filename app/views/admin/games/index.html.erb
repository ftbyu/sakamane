<div class="container-fluid">
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
			<h1 class="h3 mb-0 text-gray-800">試合追加・一覧画面</h1>
			<%= link_to new_admin_managers_game_path, class: "d-none d-sm-inline-block btn btn-primary shadow-sm" do %>
			<i class="fas fa-plus-circle"></i><span>Generate Game</span>
			<% end %>
	</div>
	<br>
	<div class="row">
		<div class="col-md-11">
			<table class="table table-striped">
				<thead>
					<tr>
						<th>対戦相手</th>
						<th>スコア</th>
						<th>試合種別</th>
						<th></th>
						</tr>
				</thead>
				<tbody>
					<% @games.each do |game| %>
						<tr>
							<td><%= game.enemy_name %></td>
							<td><%= "#{score(game)} - #{game.enemy_score}" %></td>
							<td><%= game.type.name %></td>
							<td class="text-right">
								<%= link_to "show", admin_managers_game_path(game.id) ,class:"btn-sm btn-outline-primary" %>
								<%= link_to "edit", edit_admin_managers_game_path(game.id) ,class:"btn-sm btn-outline-success" %>
								<%= link_to 'Destroy', admin_managers_game_path(game.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn-sm btn-outline-danger destroy_game_#{game.id}"%>
							</td>
						</tr>
					<% end %>
				</tbody> 
			</table>
		</div>
	</div>
</div>
